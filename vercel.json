{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/remix",
      "config": {
        "includeFiles": [
          "build/**",
          "public/**",
          "prisma/**",
          ".prisma/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/auth/$1"
    },
    {
      "src": "/webhooks/(.*)",
      "dest": "/webhooks/$1"
    },
    {
      "src": "/apps/(.*)",
      "dest": "/apps/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}